extends layout

block content
  h3 #{title}
  h1 #{restaurant}
  p(style="color: red;") #{error}
  form(method='POST' action='/restaurant/#{id}/menu/#{action}')
    input(type='hidden' id="restaurant" name="restaurant" value="#{restaurant}")
    div.form-group
        label(for='name') name
        input.form-control(type='text' id='name' placeholder='name' name='name' value='#{name}')
    div.form-group
        label(for='price') price
        input.form-control(type='test' id='price' placeholder='price' name='price' value='#{price}')
    button.btn.btn-primary(type='submit') submit